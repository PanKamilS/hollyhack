---
const p = Astro.url.pathname;
const isPL = p === "/pl" || p.startsWith("/pl/");
const toPL = isPL ? p : `/pl${p === "/" ? "" : p}`;
const toEN = isPL ? p.replace(/^\/pl(\/|$)/, "/") : p;
---

<div class="flex items-center gap-2 text-sm">
  <a href={toEN} class={isPL ? "opacity-60 hover:opacity-100" : "font-semibold"}>EN</a>
  <span class="opacity-40">/</span>
  <a href={toPL} class={!isPL ? "opacity-60 hover:opacity-100" : "font-semibold"}>PL</a>
</div>
