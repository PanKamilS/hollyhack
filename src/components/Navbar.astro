---
import LangSwitch from "../components/LangSwitch.astro";
import ThemeToggle from "../components/ThemeToggle.astro";

const isPL = Astro.url.pathname === "/pl" || Astro.url.pathname.startsWith("/pl/");
const home = isPL ? "/pl" : "/";
const blog = isPL ? "/pl/blog" : "/blog";
const about = isPL ? "/pl/about" : "/about";
---

<div class="mx-auto max-w-5xl px-5">
  <header class="flex items-center justify-between py-6">
    <a href={home} class="font-semibold tracking-tight text-lg">
      hollyhack
    </a>

    <nav class="flex items-center gap-4">
      <a href={blog} class="text-sm opacity-80 hover:opacity-100">Blog</a>
      <a href={about} class="text-sm opacity-80 hover:opacity-100">About</a>
      <LangSwitch />
      <ThemeToggle />
    </nav>
  </header>

  <div class="border-b border-zinc-200 dark:border-zinc-800"></div>
</div>
