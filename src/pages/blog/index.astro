---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Navbar from "../../components/Navbar.astro";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import FormattedDate from "../../components/FormattedDate.astro";

import Fallback from "../../assets/blog-placeholder-3.jpg";

const posts = (await getCollection("blog"))
  .filter((p) => (p.data.lang ?? "en") === "en" && !p.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="Blog â€” HollyHack" lang="en">
  <Navbar />

  <section class="mt-10">
    <div class="flex items-end justify-between gap-4 flex-wrap">
      <div>
        <h1 class="text-3xl font-bold tracking-tight">Blog</h1>
        <p class="mt-3 text-zinc-600 dark:text-zinc-300">
          Security notes, labs write-ups, and walkthroughs.
        </p>
      </div>
    </div>

    <div class="mt-8 grid gap-6 sm:grid-cols-2">
      {posts.map((post) => {
        const href = `/blog/${post.slug}`;
        const img = post.data.heroImage ?? Fallback;

        return (
          <a
            href={href}
            class="group overflow-hidden rounded-2xl border border-zinc-200 bg-white shadow-sm transition hover:-translate-y-0.5 hover:shadow-md dark:border-zinc-800 dark:bg-zinc-900"
          >
            <div class="aspect-[16/9] w-full overflow-hidden">
              <Image
                src={img}
                alt={post.data.title}
                class="h-full w-full object-cover transition duration-300 group-hover:scale-[1.03]"
              />
            </div>

            <div class="p-5">
              <div class="flex items-center justify-between gap-4">
                <p class="text-xs text-zinc-500 dark:text-zinc-400">
                  <FormattedDate date={post.data.pubDate} />
                </p>

                {post.data.tags?.length ? (
                  <span class="text-xs rounded-full border border-zinc-200 px-3 py-1 dark:border-zinc-800">
                    {post.data.tags[0]}
                  </span>
                ) : null}
              </div>

              <h2 class="mt-3 text-lg font-semibold leading-snug group-hover:underline">
                {post.data.title}
              </h2>

              {post.data.description && (
                <p class="mt-2 text-sm text-zinc-600 dark:text-zinc-300">
                  {post.data.description}
                </p>
              )}
            </div>
          </a>
        );
      })}
    </div>
  </section>
</BaseLayout>
