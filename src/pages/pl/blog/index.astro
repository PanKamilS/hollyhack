---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import Navbar from "../../../components/Navbar.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog"))
  .filter((p) => (p.data.lang ?? "en") === "pl" && !p.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="Blog — HollyHack" lang="pl">
  <Navbar />

  <section class="mt-10">
    <div class="flex items-end justify-between gap-4 flex-wrap">
      <div>
        <h1 class="text-3xl font-bold tracking-tight">Blog</h1>
        <p class="mt-3 text-zinc-600 dark:text-zinc-300">
          Notatki security, write-upy HTB i walkthrough.
        </p>
      </div>
    </div>

    <ul class="mt-8 space-y-4">
      {posts.map((post) => (
        <li>
          <a
            href={`/pl/blog/${post.slug}`}
            class="group block rounded-2xl border border-zinc-200 p-5 transition hover:bg-zinc-50 dark:border-zinc-800 dark:hover:bg-zinc-800/50"
          >
            <div class="flex items-start justify-between gap-4">
              <div>
                <h2 class="text-lg font-semibold group-hover:underline">
                  {post.data.title}
                </h2>
                {post.data.description && (
                  <p class="mt-2 text-sm text-zinc-600 dark:text-zinc-300">
                    {post.data.description}
                  </p>
                )}
              </div>

              <p class="shrink-0 text-xs text-zinc-500 dark:text-zinc-400 pt-1">
                {post.data.pubDate.toLocaleDateString("pl-PL")}
              </p>
            </div>

            {post.data.tags?.length > 0 && (
              <div class="mt-4 flex flex-wrap gap-2">
                {post.data.tags.slice(0, 5).map((t) => (
                  <span class="text-xs rounded-full border border-zinc-200 px-3 py-1 dark:border-zinc-800">
                    #{t}
                  </span>
                ))}
              </div>
            )}
          </a>
        </li>
      ))}
    </ul>

    {posts.length === 0 && (
      <div class="mt-8 rounded-2xl border border-zinc-200 p-5 dark:border-zinc-800">
        <p class="text-sm text-zinc-600 dark:text-zinc-300">
          Brak wpisów po polsku. Dodaj post z <code>lang: pl</code>.
        </p>
      </div>
    )}
  </section>
</BaseLayout>
